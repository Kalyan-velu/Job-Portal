{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "ES2022", // or any version after ES2015
    "moduleResolution": "bundler",
    "target": "ES2022",
    "lib": [
      "ES2022"
    ],
    "outDir": "dist",
    "isolatedModules": true,
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "sourceMap": true,
  },
  "include": [
    "src/**/*.ts",
    "*.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}