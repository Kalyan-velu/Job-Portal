{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Server with Nodemon",
      "runtimeExecutable": "nodemon",
      "program": "${workspaceFolder}/server/src/bin/www.ts", // Adjust path to your entry file
      "args": [
        "-r",
        "tsconfig-paths/register"
      ],
      "restart": true,
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "envFile": "${workspaceFolder}/.env", // Optional: if you have environment variables
      "env": {
        "NODE_ENV": "development",
        "PORT": "8000"
      },
      "cwd": "${workspaceFolder}/server", // Ensures nodemon runs in the `server` workspace
      "skipFiles": [
        "<node_internals>/**",
        "**/node_modules/**"
      ]
    }
  ]
}