// tsconfig.json
{
  "compilerOptions": {
    "noEmit": true,
    "allowImportingTsExtensions": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@shared/*": [
        "shared/*"
      ], // Alias for shared code
      "@/client/src/*": [
        "client/src/*"
      ], // Alias for client code
      "@server/*": [
        "server/src/*"
      ], // Alias for server code
      "@server/modules/*": [
        "server/src/modules/*"
      ],
      "@server/common/*": [
        "server/src/common/*"
      ],
      "@server/models/*": [
        "server/src/models/*"
      ],
      "@server/types/*": [
        "server/src/types/*"
      ],
      "@server/zod-schema/*": [
        "server/src/zod/*"
      ],
      "@server/app": [
        "server/src/app"
      ],
      "@server/common-lib/*": [
        "server/src/lib/*"
      ],
      "@hookform/resolvers/*": [
        "node_modules/@hookform/resolvers/*"
      ]
    },
  },
  "require": [
    "tsconfig-paths/register"
  ],
  "include": [
    "server/**/*",
    "client/**/*"
  ]
}